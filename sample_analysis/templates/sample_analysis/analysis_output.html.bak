{% extends 'sample_analysis/base.html' %}
{% load staticfiles %}

{% block content %}
    <div class="tabs">
        <div class="tab-links">
            <li class="active"><a href="#summary">Summary</a></li>
            <li><a href="#metadata">Metadata</a></li>
            {% if vt_use %}
                <li><a href="#virustotal">VirusTotal</a></li>
        	{% endif %}
        	{% if ta_use %}
                <li><a href="#threatanalyzer">ThreatAnalyzer</a></li>
        	{% endif %}
        	{% if crits_use %}
                <li><a href="#crits">CRITs</a></li>
        	{% endif %}
            <li><a href="#stringdata">String Data</a></li>            
            {# TODO: Generate tabs dynamically depending on the file type#}
            <li><a href="#plaintext">Plain Text Report</a></li>
        </div><!--end tab-links class-->
        
        {#Tab contents#}
        
        <div class="tab-data">
            <div id="summary" class="tab active">
                <h3>Basic Info</h3>
		        <div class="data_group">
                    <p><b>Filename:</b> {{ sample.filename|truncatechars:30 }}</p>
                    <p><b>Ticket No.:</b> {{ sample.ticket }}</p>
                    <p><b>Submission Date:</b> {{ sample.created }}</p>
                    <p><b>Size:</b> {{ sample.size }} bytes</p>
                    <p><b>MD5:</b> {{ sample.md5 }}</p>
                    <p><b>SHA1:</b> {{ sample.sha1 }}</p>
                    <p><b>SHA256:</b> {{ sample.sha256 }}</p>
                    <p><b>FUZZY:</b> {{ sample.ssdeep }}</p>
		        </div>
		
	            {% if base_analysis.ssdeep_compare %}
	                <h3>SSDEEP Comparison</h3> 
	                <div class="data_group">
                    <p>
		                <pre>{{ base_analysis.ssdeep_compare }}</pre>
		            </p>
	                </div>
	            {% endif %}

		        {% if base_analysis.vt_short %}
                    <h3>VirusTotal Results</h3>
		            <div class="data_group">
	                <p>
	                    {% autoescape off %}
	                    <pre>{{ base_analysis.vt_short }}</pre>
	                    {% endautoescape %}
			        </p>
		            </div>
		        {% endif %}
            </div> <!--end summary tab-->
            
            <div id="metadata" class="tab">
                {% if base_analysis.filetype %}
                    <p>
                        <h3>Filetype Info:</h3> 
                        <pre>{{ base_analysis.filetype }}</pre>
                    </p>
                {% endif %}
                
                {% if base_analysis.trid %}
                    <p>
                        <h3>TrID</h3>
                        <pre>{{ base_analysis.trid }}</pre>
                    </p>
                {% endif %}
            </div><!--end metadata tab-->


    </div><!--end tabs class-->

{% endblock %}
